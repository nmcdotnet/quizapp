<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PLAY_PARENT"
    android:background="#FFF5EE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">


    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="181dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="name"
        android:textColor="#3168CC"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="374dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="TRANG QUẢN LÝ ADMIN"
        android:textColor="#3168CC"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserName"></TextView>

    <TextView
        android:id="@+id/btnCauHoi"
        android:layout_width="77dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/img_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTieuDe"></TextView>


    <TextView
        android:id="@+id/btnDangXuat"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="Câu hỏi"
        android:textColor="#3168CC"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCauHoi"></TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Tài khoản"
        android:textColor="#3168CC"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTaiKhoan"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Chủ đề"
        android:textColor="#3168CC"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChuDe"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:text="Đổi mật khẩu"
        android:textColor="#3168CC"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDoiMatKhau"></TextView>

    <TextView
        android:id="@+id/btnTaiKhoan"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/team"
        android:textColor="#3168CC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTieuDe"></TextView>

    <TextView
        android:id="@+id/btnChuDe"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/books"
        android:textColor="#3168CC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"></TextView>

    <TextView
        android:id="@+id/btnDoiMatKhau"
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/reset"
        android:textColor="#3168CC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>