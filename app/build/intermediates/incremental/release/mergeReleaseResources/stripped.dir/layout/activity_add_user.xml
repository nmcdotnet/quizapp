<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF5EE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnCreateUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/rdoGroup"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/confirm"></ImageButton>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/rdoGroup"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Tạo mới"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnBackUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rdoGroup"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/re"></ImageButton>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rdoGroup"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Quay lại"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMatKhau"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Phân quyền:"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtMatKhau"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTaiKhoan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:background="@drawable/edt_vien"
        android:hint="Nhập mật khẩu"></EditText>

    <EditText
        android:id="@+id/edtTaiKhoan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTieuDe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/edt_vien"
        android:hint="Nhập tài khoản"></EditText>

    <TextView
        android:id="@+id/btnHome"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="58dp"
        android:background="@drawable/home2"></TextView>

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="181dp"
        android:layout_height="37dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textColor="#3168CC"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="374dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txtUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="TẠO TÀI KHOẢN"
        android:textColor="#3168CC"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <RadioGroup
        android:id="@+id/rdoGroup"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMatKhau"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="34dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdoUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người dùng"></RadioButton>

        <RadioButton
            android:id="@+id/rdoAdmin"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:text="Admin"></RadioButton>

    </RadioGroup>


</RelativeLayout>
