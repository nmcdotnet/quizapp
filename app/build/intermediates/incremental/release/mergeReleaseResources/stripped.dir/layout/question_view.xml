<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4C374"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/id_question"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="id" />

    <TextView
        android:id="@+id/name_question"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:gravity="center_vertical"
        android:text="name_question" />

    <TextView
        android:id="@+id/name_category"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="330dp"
        android:gravity="center_vertical"
        android:text="chude"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/name_category"
        android:background="#E9CD8E" />


</RelativeLayout>