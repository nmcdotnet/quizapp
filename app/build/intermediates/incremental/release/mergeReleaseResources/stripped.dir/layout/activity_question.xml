<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    android:orientation="vertical"
    tools:context=".user.QuestionActivity">

    <TextView
        android:id="@+id/btnHome"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/home2"></TextView>

    <TextView
        android:id="@+id/txtClock"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/clock"></TextView>

    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:freezesText="true"
        android:text="Điểm: 0"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/text_view_question_count"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_score"
        android:layout_marginLeft="20dp"
        android:freezesText="true"
        android:text="Câu hỏi: 1/a"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/text_view_category"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_question_count"
        android:layout_marginLeft="20dp"
        android:freezesText="true"
        android:text="Chủ đề: a"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:freezesText="true"
        android:text="00 : 30"
        android:textColor="@color/black"
        android:textSize="40sp"></TextView>

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/txt_question"
        android:gravity="center"
        android:text="câu hỏi?"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_question"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true">

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 1"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 2"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 3"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 4"></RadioButton>


    </RadioGroup>

    <TextView
        android:id="@+id/button_confirm_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:width="150dp"
        android:background="@drawable/btn_vien"
        android:freezesText="true"
        android:gravity="center"
        android:text="Xác nhận"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/btnBackMainUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="16dp"
        android:width="150dp"
        android:background="@drawable/btn_back"
        android:freezesText="true"
        android:gravity="center"
        android:text="Quay lại"
        android:textColor="@color/white"></TextView>

