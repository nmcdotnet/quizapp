<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE">

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textColor="#3168CC"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="374dp"
        android:layout_height="65dp"
        android:layout_below="@id/txtUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="THÊM CÂU HỎI"
        android:textColor="#3168CC"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/btnHome"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="58dp"
        android:background="@drawable/home2"></TextView>

    <EditText
        android:id="@+id/edtNameQuestion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTieuDe"
        android:layout_marginTop="22dp"
        android:background="@drawable/edt_vien"
        android:hint="Nhập câu hỏi"></EditText>

    <EditText
        android:id="@+id/edtOption1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNameQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_vien"
        android:hint="Đáp án A"></EditText>

    <EditText
        android:id="@+id/edtOption2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtOption1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_vien"
        android:hint="Đáp án B"></EditText>


    <EditText
        android:id="@+id/edtOption3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtOption2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_vien"
        android:hint="Đáp án C"></EditText>

    <EditText
        android:id="@+id/edtOption4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtOption3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_vien"
        android:hint="Đáp án D"></EditText>

    <EditText
        android:id="@+id/edtAnswer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtOption4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_vien"
        android:hint="Đáp án đúng"
        android:inputType="number"></EditText>


    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtAnswer"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/spinner"
        android:gravity="center"></Spinner>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:layout_below="@id/edtAnswer"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Chọn chủ đề:"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnCreateQuestion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spCategory"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/confirm"></ImageButton>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="76dp"
        android:layout_height="29dp"
        android:layout_below="@+id/spCategory"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:gravity="fill_vertical"
        android:text="Tạo mới"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnBackQuestion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spCategory"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/re"></ImageButton>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spCategory"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="Quay lại"
        android:textColor="#3168CC"
        android:textStyle="bold" />


</RelativeLayout>