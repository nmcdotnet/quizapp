<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/txtDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:gravity="center"
        android:text="ĐỔI MẬT KHẨU"
        android:textColor="#3168CC"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/edtTaiKhoan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDangNhap"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edt_vien"
        android:enabled="false"
        android:hint="Tài khoản"></EditText>

    <EditText
        android:id="@+id/edtMatKhau"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTaiKhoan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edt_vien"
        android:hint="Mật khẩu cũ"
        android:inputType="textPassword"></EditText>

    <EditText
        android:id="@+id/edtNhapLaiMatKhauMoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtMatKhauMoi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:width="300dp"
        android:background="@drawable/edt_vien"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"></EditText>

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNhapLaiMatKhauMoi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:gravity="right"
        android:text="Quay lại"></TextView>

    <EditText
        android:id="@+id/edtMatKhauMoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtMatKhau"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:width="300dp"
        android:background="@drawable/edt_vien"

        android:hint="Mật khẩu mới"
        android:inputType="textPassword"></EditText>

    <TextView
        android:id="@+id/btnDoiMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="250dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white"></TextView>
</RelativeLayout>