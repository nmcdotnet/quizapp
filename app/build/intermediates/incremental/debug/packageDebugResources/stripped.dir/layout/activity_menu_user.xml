<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF5EE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTieuDe"
        android:layout_marginTop="80dp"
        android:background="@drawable/search2"
        android:hint="Nhập id hoặc tên tài khoản"
        android:paddingLeft="20dp">

    </EditText>

    <TextView
        android:id="@+id/btnClear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txtTieuDe"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/search"></TextView>

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textColor="#3168CC"
        android:textSize="20sp"></TextView>


    <TextView
        android:id="@+id/btnHome"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="58dp"
        android:background="@drawable/home2"></TextView>

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="374dp"
        android:layout_height="65dp"
        android:layout_below="@id/txtUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="QUẢN LÝ TÀI KHOẢN"
        android:textColor="#3168CC"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>


    <ImageButton
        android:id="@+id/btnAddUser"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_below="@id/txtTieuDe"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/add"
        android:tooltipText="Thêm tài khoản"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTieuDe"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Thêm"></TextView>

    <ListView
        android:id="@+id/lvUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="370dp">

    </ListView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTieuDe"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Danh sách tài khoản"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="102dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtTieuDe"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Tên tài khoản"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="102dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtTieuDe"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Phân quyền"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="102dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtTieuDe"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Mật khẩu"
        android:textColor="#3168CC"
        android:textStyle="bold" />

</RelativeLayout>