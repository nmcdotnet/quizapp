<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF5EE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="name"
        android:textColor="#3168CC"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="374dp"
        android:layout_height="65dp"
        android:layout_below="@id/txtUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="CẬP NHẬT CHỦ ĐỀ"
        android:textColor="#3168CC"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>


    <EditText
        android:id="@+id/edtNameCategory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTieuDe"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edt_vien"
        android:hint="Nhập tên chủ đề"></EditText>


    <TextView
        android:id="@+id/btnHome"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:background="@drawable/home2"></TextView>

    <ImageButton
        android:id="@+id/btnEditCategory"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtNameCategory"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/confirm"></ImageButton>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/edtNameCategory"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Cập nhật"
        android:textColor="#3168CC"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnBackCategory"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtNameCategory"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/re"></ImageButton>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@id/edtNameCategory"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Quay lại"
        android:layout_marginRight="60dp"
        android:textColor="#3168CC"
        android:textStyle="bold" />


</RelativeLayout>